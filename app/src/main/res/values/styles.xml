<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_base_title">
        <item name="android:textSize">@dimen/dimen_list_item_title_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="style_title" parent="style_base_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_list_item_title" parent="style_title">
        <item name="android:layout_marginLeft">@dimen/dimen_margin_13</item>
    </style>

    <style name="style_card_text" parent="style_title">
        <item name="android:layout_marginLeft">@dimen/dimen_margin_13</item>
        <item name="android:layout_marginRight">@dimen/dimen_margin_13</item>
    </style>

</resources>
